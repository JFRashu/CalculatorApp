<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator_Activity"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/md_theme_secondary_highContrast">

    <LinearLayout
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_layer_1"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_pi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="π"
            android:textSize="25dp"

            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_square"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="X²"
            android:textSize="20dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="√"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_ac"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="AC"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:padding="2dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="C"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_layer_2"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="7"
            android:textSize="25dp"

            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="8"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="9"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_lb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="("
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:padding="2dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text=")"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layer_3"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="4"
            android:textSize="25dp"

            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="5"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="6"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="-"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:padding="2dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="/"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_layer_4"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="1"
            android:textSize="25dp"

            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="2"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="3"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="+"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:padding="2dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_muliply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="*"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_layer_5"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="."
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="0"
            android:textSize="25dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_medium"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="%"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:background="@drawable/curved_button_background_high"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textAlignment="center"

            android:layout_height="match_parent"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:text="="
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_margin="12dp"

            android:background="@drawable/curved_button_background_tertiary"
            app:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimaryFixedVariant" />


    </LinearLayout>

</LinearLayout>